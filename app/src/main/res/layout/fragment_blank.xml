<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BlankFragment"
    android:background="@color/colorAccent">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/output_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/fragment_1" />

    <TextView
        android:id="@+id/num_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Num of fragment"/>

    <!-- button for remove text. button will working from fragment.java -->
    <Button
        android:id="@+id/remove_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Remove text"/>

</FrameLayout>